{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "lib": ["ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node", // TODO: Should be set to "Bundler" after this issue is fixed:
                                // https://github.com/jeremydaly/dynamodb-toolbox/issues/554
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "../dist",
    "declaration": true,
    "noEmit": false,
  }
}